[user]
	name = Jeremy A. Prescott
	email = jap@prescore.ch


[color]
	ui = true

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[push]
	default = current

[help]
	autocorrect = 1


[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	d = diff
	dt = difftool
    fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    ri = rebase --interactive --autosquash

[color]
	diff = auto
	status = auto
	branch = auto
	user = jeremy


[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
	
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace = trailing-space,space-before-tab,cr-at-eol
	excludesfile = /Users/jeremy/.gitignore
	ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '

[credential]
	helper = cache --timeout=7200

[push]
	default = current

[branch "master"]
	mergeoptions = --no-ff

[rerere]
	enabled = true

[status]
	submoduleSummary = true


[log]
	date = relative