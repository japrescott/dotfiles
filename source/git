#GIT
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gch='git checkout '
alias gp='git push'
alias gd='git diff'
# dont fuck with golang -> alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'

# git commit and push
function gcp(){
    gc -a -m "$1";
    gp;
}

# git yolo
function gyolo(){
    gc -a -m "$1" --no-verify;
    gp --no-verify;
}

function gsync(){
    [ "$#" -eq 0 ] &&  { echo "Usage: gsync [branch]"; exit 1; }
    CUR_BRANCH=$(git branch --show-current)
    echo "What ${CUR_BRANCH}"
    if [[ -z $(git status -s) ]]
    then
        gch $1
        git pull
        gch $CUR_BRANCH
        git merge $1
    else
        echo "Dirty hobbits with their dirty crumbs all over the branch..."
        exit 1
    fi
}

function gsync-dev(){
    gsync develop
}


alias gstl='git stash list'
alias gstshow='git stash show stash^{/$*}'
alias gstapply='git stash apply stash^{/$*}'

# interactive git checkout
function gc() {
    git checkout $(git branch "$@" -vv --sort=-committerdate | fzf --header 'git checkout' | awk '{print $1}' | sed 's#remotes/origin/##' | xargs)
}
